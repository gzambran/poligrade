generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Office {
  GOVERNOR
  SENATOR
  HOUSE_REPRESENTATIVE
}

enum Status {
  INCUMBENT
  CANDIDATE
  NONE
}

enum Grade {
  PROGRESSIVE
  LIBERAL
  CENTRIST
  MODERATE
  CONSERVATIVE
  NATIONALIST
}

model Politician {
  id        String   @id @default(cuid())
  name      String
  state     String   @db.VarChar(2) // 2-letter state abbreviation (e.g., CA, NY, TX)
  district  String?
  office    Office
  status    Status
  grade     Grade
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([state])
  @@index([office])
  @@index([grade])
}
