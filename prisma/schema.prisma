generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Office {
  GOVERNOR
  SENATOR
  HOUSE_REPRESENTATIVE
}

enum Status {
  INCUMBENT
  CANDIDATE
  NONE
}

enum Grade {
  PROGRESSIVE
  LIBERAL
  CENTRIST
  MODERATE
  CONSERVATIVE
  NATIONALIST
}

enum Party {
  DEMOCRAT
  REPUBLICAN
  INDEPENDENT
}

model Politician {
  id        String   @id @default(cuid())
  name      String
  slug      String?  @unique
  state     String   @db.VarChar(2) // 2-letter state abbreviation (e.g., CA, NY, TX)
  district  String?
  office    Office
  status    Status
  grade     Grade

  // Profile fields
  photoUrl        String?
  party           Party?
  currentPosition String?
  runningFor      Office?
  published       Boolean  @default(false)

  // Issue fields (9 criteria)
  economicPolicy            String? @db.Text
  businessLabor             String? @db.Text
  healthCare                String? @db.Text
  education                 String? @db.Text
  environment               String? @db.Text
  civilRights               String? @db.Text
  votingRights              String? @db.Text
  immigrationForeignAffairs String? @db.Text
  publicSafety              String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([state])
  @@index([office])
  @@index([grade])
  @@index([published])
}
